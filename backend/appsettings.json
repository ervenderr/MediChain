{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Urls": "http://0.0.0.0:5001",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=medichain.db"
  },
  "JWT": {
